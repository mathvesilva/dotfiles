#!/usr/bin/env bash

# core utils
alias ls='ls --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias grep='grep --color=auto'

# dotfiles
alias sd='sh ~/dotfiles/bootstrap.sh'

# navigation
alias pj='cd ~/projects'
alias ec='cd ~/projects/exercism'
alias dl='cd ~/downloads'

# arch linux
alias puf='pacaur -Syu'
alias pus='pacaur -Syyu --devel'
alias pru='pacaur -Rns $(pacaur -Qttdq)'
alias pro='pacaur -Sc'
alias pqi='pacaur -s'
alias pqq='pacaur -Q'
